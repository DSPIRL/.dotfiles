{
    "layer": "top",
    "position": "top",
    "reload_style_on_change": true,
    "modules-left": [
        "custom/pacman",
        "tray"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "group/expand",
        "pulseaudio",
        "bluetooth",
        "network",
        "battery",
        "clock",
        "custom/notification"
    ],
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": "ÔÑë",
            "default": "ÔÑë",
            "empty": "ÔÑë"
        },
        "persistent-workspaces": {
            "*": [
                1,
                2,
                3,
                4,
                5
            ]
        }
    },
    "custom/notification": {
        "tooltip": false,
        "format": "Óöê",
        "on-click": "swaync-client -t -sw",
        "escape": true
    },
    "clock": {
        "format": "{:%H:%M} ",
        "interval": 1,
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "format": {
                "today": "<span color='#00ff00'><b>{}</b></span>"
            }
        },
        "on-click": "gnome-calendar"
        // "actions": {
        //     "on-click-right": "shift_down",
        //     "on-click": "shift_up"
        // }
    },
    "network": {
        "format-wifi": "Ôá´ ",
        "format-ethernet": "Óºâ ",
        "format-disconnected": "Ó¨Å ",
        "tooltip-format-disconnected": "Error",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´ ",
        "tooltip-format-ethernet": "{ifname} üñß ",
        "on-click": "$USER_TERMINAL -e nmtui"
    },
    "pulseaudio": {
        "format": "{icon}{volume}%",
        "format-muted": "Ôë¶ ",
        "format-icons": {
            "default": [
                "ÔÄ¶",
                "ÔÄß ",
                "ÔÄ® "
            ]
        },
        "on-click": "pavucontrol"
    },
    "bluetooth": {
        "format-on": "Û∞ÇØ",
        "format-off": "BT-off",
        "format-disabled": "Û∞Ç≤",
        "format-connected-battery": "Û∞ÇØ{device_battery_percentage}%",
        "format-alt": "Û∞ÇØ{device_alias}",
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections}connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
        "on-click-right": "blueman-manager"
    },
    "battery": {
        "interval": 30,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Û∞ÇÑ{capacity}%",
        "format-plugged": "Ó¨≠Û∞ÇÑ{capacity}%",
        "format-alt": "{icon} {time}",
        "format-icons": [
            "Û∞Åª",
            "Û∞Åº",
            "Û∞Åæ",
            "Û∞ÇÄ",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ]
    },
    "custom/pacman": {
        "format": "Û∞Ö¢ {}",
        "interval": 30,
        "exec": "checkupdates | wc -l",
        "exec-if": "exit 0",
        "on-click": "$USER_TERMINAL -e sh -c 'paru -Syu; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar",
        "signal": 8,
        "tooltip": false
    },
    "custom/expand": {
        "format": "ÔÑÑ",
        "tooltip": false
    },
    "custom/endpoint": {
        "format": "|",
        "tooltip": false
    },
    "group/expand": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 600,
            "transition-to-left": true,
            "click-to-reveal": true
        },
        "modules": [
            "custom/expand",
            "custom/colorpicker",
            "custom/hyprsunset",
            "cpu",
            "memory",
            "temperature",
            "custom/endpoint"
        ]
    },
    "custom/colorpicker": {
        "format": "{} ",
        "return-type": "json",
        "interval": "once",
        "exec": "~/.config/waybar/scripts/colorpicker.sh -j",
        "on-click": "~/.config/waybar/scripts/colorpicker.sh",
        "signal": 1
    },
    "custom/hyprsunset": {
        "format": "ÔÜÖ ",
        "return-type": "json",
        "interval": "once",
        "on-click": "~/.config/waybar/scripts/hyprsunset.sh",
        "on-click-right": "gddccontrol",
        "tooltip-format": "Left click for night mode.\nRight click for brightness control.",
        "signal": 1
    },
    "cpu": {
        // "format": "Û∞ª†",
        "format": "Ôãõ {usage:>2}%",
        "tooltip": true,
        "interval": 2,
        "on-click": "$USER_TERMINAL -e btop -p 2"
    },
    "memory": {
        "format": "ÓøÖ {percentage}%",
        "interval": 5
        // "format": "ÓøÖ"
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "Ôãâ{temperatureC}¬∞C"
    },
    "tray": {
        "icon-size": 14,
        "spacing": 10
    }
}
