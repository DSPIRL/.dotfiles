/* ROUNDED THEME FOR ROFI */
/* Author: Newman Sanchez (https://github.com/newmanls) */


* {
    font:   "Roboto 14";

    background-color:   @window-background;
    text-color:         @normal-text;

    margin:     0px;
    padding:    0px;
    spacing:    0px;
}

window {
    location:       north;
    y-offset:       calc(35% - 176px);
    width:          600;
    border-radius:  24px;

    border:         2px;
    border-radius:  16px;

    background-color:   @normal-background;
    border-color: @window-border;
}

mainbox {
    padding:    12px;
}

inputbar {
    background-color:   @prompt-background;
    border-color:       @window-background;

    border:         2px;
    border-radius:  16px;

    padding:    8px 16px;
    spacing:    8px;
    children:   [ prompt, entry ];
}

prompt {
    text-color: @normal-text;
}

entry {
    placeholder:        "";
    placeholder-color:  @prompt-text;
}

message {
    margin:             12px 0 0;
    border-radius:      16px;
    border-color:       @error-message-border;
    background-color:   @error-message-border;
}

textbox {
    padding:    8px 24px;
}

listview {
    background-color:   transparent;

    margin:     12px 0 0;
    lines:      8;
    columns:    1;

    fixed-height: false;
}

element {
    padding:        8px 16px;
    spacing:        8px;
    border-radius:  16px;
}

element normal active {
    text-color: @normal-background;
}

element alternate active {
    text-color: @prompt-background;
}

element selected normal, element selected active {
    background-color:   @selected-background;
    // text-color: @selected-text;
}

element-icon {
    size:           1em;
    vertical-align: 0.5;
}

element-text {
    text-color: @normal-text;
}

selected {
        text-color: @selected-text;
}
